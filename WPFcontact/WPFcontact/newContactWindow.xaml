<Window x:Class="WPFcontact.newContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFcontact"
        mc:Ignorable="d"
        Title="Add Contact" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <!--TEXTBOXES-->
            <TextBox x:Name="nameTextBox" Margin="0,0,0,5"/>
            <TextBox x:Name="emailTextBox" Margin="0,0,0,5"/>
            <TextBox x:Name="phoneNumberTextBox" Margin="0,0,0,5"/>
            
            <!--SAVE BUTTON-->
            <Button x:Name="saveButton"
                    Content="Save"
                    Click="saveButton_Click"/>

        </StackPanel>
    </Grid>
</Window>
