<Window x:Class="WPFcontact.ContactUpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ContactUpdateWindow" Height="400" Width="800">
    <Grid>
        <StackPanel Margin="5">
            <TextBox x:Name="nameTextBox" Margin="0,0,0,5"/>
            <TextBox x:Name="emailTextBox" Margin="0,0,0,5"/>
            <TextBox x:Name="phoneNumberTextBox" Margin="0,0,0,5"/>
            
            <Button Content="Update" x:Name ="updateButton" Click="updateButton_Click"/>
            <Button Content="Delete" Background="Red" Foreground="White" x:Name="deleteButton" Click="deleteButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
